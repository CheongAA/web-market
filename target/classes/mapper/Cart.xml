<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mju.ict.repository.ICartDAO">

	<insert id="insertCart" parameterType="com.mju.ict.model.Cart">
		INSERT INTO tb_cart
		(user_id,product_id,product_count)
		VALUES
		(#{user_id},#{product_id},#{product_count})
	</insert>

	<select id="selectCartsByUser" parameterType="Integer" resultType="com.mju.ict.model.Cart">
		SELECT * FROM tb_cart
		WHERE
		user_id = #{user_id}
	</select>


</mapper>